<h1>Novelty Types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novelty_types.each do |novelty_type| %>
      <tr>
        <td><%= novelty_type.description %></td>
        <td><%= link_to 'Show', novelty_type %></td>
        <td><%= link_to 'Edit', edit_novelty_type_path(novelty_type) %></td>
        <td><%= link_to 'Destroy', novelty_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

