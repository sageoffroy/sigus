<p id="notice"><%= notice %></p>

<h1>Novedades</h1>

<table>
  <thead>
    <tr>
      <th>Agent</th>
      <th>Novelty type</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Description</th>
      <th>Hours to add</th>
      <th>Hours to remove</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novelties.each do |novelty| %>
      <tr>
        <td><%= novelty.agent %></td>
        <td><%= novelty.novelty_type %></td>
        <td><%= novelty.date_from %></td>
        <td><%= novelty.date_to %></td>
        <td><%= novelty.description %></td>
        <td><%= novelty.hours_to_add %></td>
        <td><%= novelty.hours_to_remove %></td>
        <td><%= link_to 'Show', novelty %></td>
        <td><%= link_to 'Edit', edit_novelty_path(novelty) %></td>
        <td><%= link_to 'Destroy', novelty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

