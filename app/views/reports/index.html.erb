<h1>Reportes</h1>

<table class="datatable">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Año</th>
      <th>Mes</th>
      <th>Hospital</th>
      <th>Servicio</th>
      <th>Total Hs.</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.report_type %></td>
        <td><%= report.year %></td>
        <td><%= report.month %></td>
        <td><%= report.service_of_dependence.dependence %></td>
        <td><%= report.service_of_dependence.service %></td>
        <td><%= report.total_hs.to_i + report.total_hs_umu.to_i%></td>
        <td>
          <%= link_to (fa_icon "eye"), report%>
          <%= link_to (fa_icon "pencil-square-o"), edit_report_path(report)%>
          <%= link_to (fa_icon "trash-o"), report, method: :delete, data: { confirm: '¿Seguro desea eliminar este registro?' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Reporte G/Activas', '/reports/new_active', class: 'btn btn-primary btn-xs' %>
<%= link_to 'Reporte G/Pasivas', '/reports/new_pasive', class: 'btn btn-primary btn-xs' %>
<%= link_to 'Reporte Hs. Extra', '/reports/new_extra_hours', class: 'btn btn-primary btn-xs' %>
<%= link_to 'Reporte Mens. P/G', '/reports/new_monthly_guard', class: 'btn btn-primary btn-xs' %>
