<h1>Reporte <%= @report.report_type %></h1>
<div class="row">
	<div class="col-sm-12">
		<p><strong>Periodo: </strong><%= @report.month %> / <%= @report.year %></p>
	</div>
	<div class="col-sm-12">
		<p><strong>Servicio: </strong><%= @report.service_of_dependence.service %></p>
	</div>
	<div class="col-sm-12">
		<p><strong>Usuario: </strong><%= @report.user%></p>
	</div>
	<div class="col-sm-12">
		<p><strong>Última Modificación: </strong><%= @report.updated_at.strftime("%d-%m-%y")%></p>
	</div>

	<div class="col-sm-12">
		<p><strong>Estado: </strong><%= @report.estado%></p>
	</div>

	<div class="col-sm-12">
		<table class="table">
			<thead>
				<tr>
					<th rowspan="2">Agente</th>
					<th rowspan="2">¿Del Servicio?</th>
  				<th colspan="3">Horas Guarida</th>
  			</tr>
		    <tr>
		    	<th>Activas</th>
		    	<th>U.M.U.</th>
		    	<th>Total</th>
		    </tr>
 		 	</thead>
			<tbody>
				<%if !@report_details.nil?%>
					<% @report_details.each do |rd| %>
		      <tr>
		        <td><%= rd.agent%></td>
		        <td><%= rd.belong_service%></td>
		        <td><%= rd.total_hours_gs%></td>
		        <td><%= rd.total_hours_umu%></td>
		        <td><%= rd.total_hours%></td>
		      </tr>
		    	<% end %>
		    <% end %>
			</tbody>
		</table>
	</div>



</div>
<%= link_to 'Editar', edit_report_path(@report), class:"btn btn-primary" %>
<%= link_to 'volver', :back, class:"btn btn-danger" %>