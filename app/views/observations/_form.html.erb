<%= form_for(observation) do |f| %>
  <% if observation.errors.any? %>
      <script type="text/javascript">
        <% observation.errors.full_messages.each do |message| %>
          toastr['error']('<%= message %>');
        <% end %>
      </script>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <h6>A침o</h6>
    </div>
    <div class="col-sm-2">
      <h6>Mes</h6>
    </div>
    <div class="col-sm-8">
      <h6>Servicio</h6>
    </div>
    <div class="input-group col-sm-2">
      <%= f.select :year, (2017)..(2019), {prompt: "A침o"}, {class: "select2"}%>
    </div>
    <div class="input-group col-sm-2">
      <%= f.select :month, (1)..(12), {prompt: "Mes"}, {class: "select2"}%>
    </div>
    <div class="input-group col-sm-8">
      <%= f.collection_select :service_of_dependence_id, @services_of_dependence, :id, :to_s, {prompt: "Servicio"}, {class: "select2"} %>
    </div>
  </div>
  <h5>Observaciones</h5>

  <div class="novelty-box">
    <%= f.fields_for :observation_details do |observation_detail| %>
      <%= render 'observation_detail_fields', :f => observation_detail %>
    <% end %>
  </div>

  <center>
    <%= link_to_add_association 'Agregar Observaci칩n', f, :observation_details, id: 'add_observation_details', class: 'btn btn-primary btn-xs btn-sm', data: { association_insertion_node: '.novelty-box', association_insertion_method: :append } %>
  </center>
  <div class="row">
    <div class="col-md-12 col-last-solid" style="margin-bottom: 1.5rem; margin-top:0.4rem;border-color: blue;"></div>  
  </div>
  <div class="form-actions">
    <%= link_to 'Atr치s', observations_path, class: 'btn btn-danger' %>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
