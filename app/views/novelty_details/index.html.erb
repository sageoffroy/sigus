<p id="notice"><%= notice %></p>

<h1>Novelty Details</h1>

<table>
  <thead>
    <tr>
      <th>Novelty</th>
      <th>Agent</th>
      <th>Novelty type</th>
      <th>Report type</th>
      <th>,year ref</th>
      <th>Month ref</th>
      <th>Description</th>
      <th>Hours to add</th>
      <th>Hours to</th>
      <th>Remove</th>
      <th>Is umu</th>
      <th>Is habitual</th>
      <th>Associated concept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @novelty_details.each do |novelty_detail| %>
      <tr>
        <td><%= novelty_detail.novelty %></td>
        <td><%= novelty_detail.agent %></td>
        <td><%= novelty_detail.novelty_type %></td>
        <td><%= novelty_detail.report_type %></td>
        <td><%= novelty_detail.,year_ref %></td>
        <td><%= novelty_detail.month_ref %></td>
        <td><%= novelty_detail.description %></td>
        <td><%= novelty_detail.hours_to_add %></td>
        <td><%= novelty_detail.hours_to %></td>
        <td><%= novelty_detail.remove %></td>
        <td><%= novelty_detail.is_umu %></td>
        <td><%= novelty_detail.is_habitual %></td>
        <td><%= novelty_detail.associated_concept %></td>
        <td><%= link_to 'Show', novelty_detail %></td>
        <td><%= link_to 'Edit', edit_novelty_detail_path(novelty_detail) %></td>
        <td><%= link_to 'Destroy', novelty_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

