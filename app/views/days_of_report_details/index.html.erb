<h1>Days Of Report Details</h1>

<table>
  <thead>
    <tr>
      <th>Report details</th>
      <th>Day</th>
      <th>Cant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days_of_report_details.each do |days_of_report_detail| %>
      <tr>
        <td><%= days_of_report_detail.report_details %></td>
        <td><%= days_of_report_detail.day %></td>
        <td><%= days_of_report_detail.cant %></td>
        <td><%= link_to 'Show', days_of_report_detail %></td>
        <td><%= link_to 'Edit', edit_days_of_report_detail_path(days_of_report_detail) %></td>
        <td><%= link_to 'Destroy', days_of_report_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

