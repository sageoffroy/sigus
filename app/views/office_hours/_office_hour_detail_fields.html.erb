<div class="nested-fields row">
  <div class="col-sm-4">
    <%= link_to_remove_association (fa_icon "window-close", class: "btn-remove"), f %>
    <div class="field" style ="margin-left: 35px;">
      <%= f.collection_select :agent_id, @agents, :id, :to_s, {prompt: "Agente del Servicio"}, {class: "select2 select-field agent"} %>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="field">
      <%= f.select :turno_hora, ["Turno","Hora"], {prompt: "Elegir tipo"}, {class: "select2 hour_type"}%>
    </div>
  </div>
  <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :lunes, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Lun", class: "number-field lun"%>
    </div>
  </div>
  <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :martes, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Mar", class: "number-field mar"%>
    </div>
  </div>
  <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :miercoles, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Mie", class: "number-field mie"%>
    </div>
  </div>
  <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :jueves, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Jue", class: "number-field jue"%>
    </div>
  </div>
  <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :viernes, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Vie", class: "number-field vie"%>
    </div>
  </div>
   <div class="" style="float:left;margin:0 5px;">
    <div class="field">
      <%= f.number_field :sabado, :maxlength => "2", :min => "0", :max => "99", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 50px;", :placeholder => "Sab", class: "number-field sab"%>
    </div>
  </div>
  <div class="col-sm-2">
    <div class="field">
      <%= f.hidden_field :total_hours, class: "total_week_hours" %>
      <%= f.number_field :rest_hours, :maxlength => "3", :min => "0", :max => "999", :onkeypress => "return isNumeric(event)", :oninput => "maxLengthCheck(this)", :style=>"width: 100%;", :placeholder => "Resto", class: "number-field rest_hours_agent"%>
    </div>
  </div>
  <div class="col-md-12 col-last"></div>
</div>


<script>
  $('.hour_type').on('select2:select', function (e) {
    calcular_total_horas_semana(this);
  });
</script>