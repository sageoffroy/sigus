<p id="notice"><%= notice %></p>

<h1>Report Details</h1>

<table>
  <thead>
    <tr>
      <th>Report</th>
      <th>Belong service</th>
      <th>Total hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_details.each do |report_detail| %>
      <tr>
        <td><%= report_detail.report %></td>
        <td><%= report_detail.belong_service %></td>
        <td><%= report_detail.total_hours %></td>
        <td><%= link_to 'Show', report_detail %></td>
        <td><%= link_to 'Edit', edit_report_detail_path(report_detail) %></td>
        <td><%= link_to 'Destroy', report_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

