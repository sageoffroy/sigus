<p id="notice"><%= notice %></p>

<h1>Free Days</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @free_days.each do |free_day| %>
      <tr>
        <td><%= free_day.day %></td>
        <td><%= free_day.description %></td>
        <td><%= link_to 'Show', free_day %></td>
        <td><%= link_to 'Edit', edit_free_day_path(free_day) %></td>
        <td><%= link_to 'Destroy', free_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Free Day', new_free_day_path %>
